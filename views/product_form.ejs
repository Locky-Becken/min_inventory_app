<!DOCTYPE html>
<html>
  <head>
    <title>Min Inventory Application</title>
    <link rel='stylesheet' href='/stylesheets/form.css' />
    <!-- <link href="/tailwind.css" rel="stylesheet"> -->
  </head>
  <body>
    <div class="container">
      <header class="header">
        <div class="logo_bar">
          <div class="sig">Br</div>
          <div class="logo"><a class='logo_link' href="/"><h2>Neverland</h2></a></div>
          <a href="/add" class="btn add">Add</a>
        </div>
        <nav class="nav_bar">
          <ul>
            <li><a class='nav_link'  href="/">Home</a></li>
            <li><a class='nav_link' href="/shop">shop</a></li>
            <li><a class='nav_link' href="/category">category</a></li>
          </ul>
        </nav>
      </header>
      <form action="" method="post">
          <div class="form-group">
              <input placeholder="Name of Product" name="name" required='true' value="<%= undefined === product ? '' : product.name %>" type="text">
              <input type="text" placeholder="50" name="price" required='true' value="<%= undefined === product ? '' : product.price %>" >
          </div>
          <div  class="form-group select">
              <select required='true' placeholder="Select Category" name="category" id="category">
                <% categories.forEach(function(category) {%>
                    <% if(category._id.toString() === product?.category._id.toString() ) {%>
                        <option selected="<%= 'selected' %>" value="<%= category._id %>"><%= category.name %></option>
                    <% } else{ %>
                        <option value="<%= category._id %>"><%= category.name %></option>
                    <% } %>
                <% }); %>
                  
              </select>
          </div>
          <div id="fm" class="form_group">
            <% colors.forEach(function(color) {%>
                <div class="check_wrapper" style="display: inline;">
                  <% if(color.checked) {%>
                    <input checked="<%= color.checked %>" class="toggle" style="position: absolute; left: -100vw;"  value="<%= color._id %>" name="color", id="<%= color._id %>" type="checkbox">
                  <% } else {%>
                    <input class="toggle" style="position: absolute; left: -100vw;"  value="<%= color._id %>" name="color", id="<%= color._id %>" type="checkbox">
                    <% } %>
                    <label  class="lb" style=" background-color: <%= color.name %>;" for="<%= color._id %>"></label>
                </div>
            <% }); %>
          </div>
          <input id="submit" value="Submit" type="submit"> 
      </form>
        
    </div>
  </body>
</html>
 